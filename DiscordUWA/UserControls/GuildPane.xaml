<UserControl
    x:Class="DiscordUWA.UserControls.GuildPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:DiscordUWA.UserControls"
    xmlns:controls="using:DiscordUWA.Controls"
    xmlns:data="using:DiscordUWA.Models"
    xmlns:Converters="using:DiscordUWA.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800"
    x:Name="root" Width="Auto">
    <UserControl.Resources>
        <Converters:StringExistsToVisibilityConverter x:Key="StringExistsToVisibilityConverter"/>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <Converters:ColorToSolidColorBrushValueConverter x:Key="ColorToBrush"/>
        <Converters:StringToUriConverter x:Key="StringToUri"/>
        <DataTemplate x:Key="ChatTextListTemplate" x:DataType="data:ChatTextListModel">
            <Grid VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Ellipse Visibility="{x:Bind Username, Converter={StaticResource StringExistsToVisibilityConverter}}" 
                         Height="30" Width="30" 
                         Grid.RowSpan="2"
                         Margin="0,5,5,0"
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush>
                            <ImageBrush.ImageSource>
                                <BitmapImage UriSource="{Binding AvatarUrl}" />
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            Visibility="{x:Bind Username, Converter={StaticResource StringExistsToVisibilityConverter}}">
                    <TextBlock MaxWidth="200"
                               FontWeight="Bold"
                               Text="{x:Bind Username}" 
                               Foreground="{x:Bind UserRoleColor, Converter={StaticResource ColorToBrush}}"/>
                    <TextBlock
                           Margin="5,0,0,0"
                           Text="{x:Bind TimeSent}" 
                           Foreground="#FF686A6E"/>
                </StackPanel>

                <controls:MarkdownTextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ChatText}"/>

                <Image Grid.Column="1" Grid.Row="2" MaxHeight="{x:Bind ImageMaxHeight}" HorizontalAlignment="Left"
                       Visibility="{x:Bind ImageUrl, Converter={StaticResource StringExistsToVisibilityConverter}}">
                    <Image.Source>
                        <BitmapImage UriSource="{Binding ImageUrl}"/>
                    </Image.Source>
                </Image>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="chatGrid" Background="#FF36393E">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ToggleButton x:Name="TogglePaneButton"
                          TabIndex="1"
                          Style="{StaticResource SplitViewTogglePaneButtonStyle}"
                          AutomationProperties.Name="Menu"
                          Command="{x:Bind ServerListToggle}"
                          ToolTipService.ToolTip="Menu" 
                          Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                    Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="#" Margin="20,0,0,0"/>
                <TextBlock VerticalAlignment="Center" Text="{x:Bind ChannelName, Mode=OneWay}" FontWeight="Bold"/>
                <TextBlock Text="{x:Bind ChannelTopic, Mode=OneWay}" VerticalAlignment="Center" Margin="20,0,0,0" />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                <Button Command="{x:Bind ToggleUserListCommand}" HorizontalAlignment="Center" Background="Transparent">
                    <FontIcon Glyph="&#xE716;"/>
                </Button>
                <Button Command="{x:Bind PinnedMessagesCommand}" HorizontalAlignment="Center" Background="Transparent">
                    <FontIcon Glyph="&#xE718;"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Background="#FF252526" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="chatLogListView"
                      Background="#FF36393E" 
                      ItemsSource="{x:Bind ChatLogList, Mode=OneWay}" 
                      ItemTemplate="{StaticResource ChatTextListTemplate}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="Padding" Value="6,3"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" VerticalAlignment="Bottom"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox TextWrapping="Wrap" Text="{x:Bind MessageText, Mode=TwoWay}" PlaceholderText="Type Message..." Margin="20,0,0,0"/>
                <Button x:Name="sendChatMessage" Content="Send" Margin="20,0" Grid.Column="1" Command="{x:Bind SendMessageCommand}"/>
            </Grid>
            <SplitView x:Name="UserListSplitView" 
                       Grid.Column="1" Grid.RowSpan="2"
                       Visibility="{x:Bind ShowUserList, Mode=OneWay, Converter={StaticResource BoolToVis}, FallbackValue='Visible'}" 
                       IsPaneOpen="True" DisplayMode="Inline" PanePlacement="Right" OpenPaneLength="300"
                       HorizontalAlignment="Right">
                <SplitView.Pane>
                    <uc:UserList 
                        ShowChannelTopic="False"
                        ChannelTopic="{x:Bind ChannelTopic, Mode=OneWay}"
                        FullUserList="{x:Bind FullUserList, Mode=OneWay}" 
                        UserClick="{x:Bind UserClick}"
                        Margin="20,20,0,0" 
                        VerticalContentAlignment="Stretch" VerticalAlignment="Top"/>
                </SplitView.Pane>
            </SplitView>
        </Grid>
    </Grid>
</UserControl>